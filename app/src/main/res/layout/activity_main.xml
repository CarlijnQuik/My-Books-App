<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.carlijnquik.carlijnquik_pset6.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Welcome to the MyBooks App!"
        android:elevation="5dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/name_input"
        android:layout_marginTop="62dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/go"
        android:scaleType="fitCenter"
        android:id="@+id/go"
        android:onClick="Go"
        android:layout_below="@+id/name_input"
        android:layout_alignRight="@+id/name_input"
        android:layout_alignEnd="@+id/name_input" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_input"
        android:layout_alignLeft="@+id/name_input"
        android:layout_alignStart="@+id/name_input">

        <RadioButton
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male"
            android:onClick="onRadioButtonClicked"
            android:layout_below="@+id/name_input"
            android:layout_alignLeft="@+id/name_input"
            android:layout_alignStart="@+id/name_input"
            android:layout_marginTop="22dp" />

        <RadioButton
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:onClick="onRadioButtonClicked"
            android:layout_below="@+id/female"
            android:layout_alignLeft="@+id/female"
            android:layout_alignStart="@+id/female" />

        <RadioButton
            android:text="Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other"
            android:onClick="onRadioButtonClicked"
            android:layout_below="@+id/other"
            android:layout_alignLeft="@+id/other"
            android:layout_alignStart="@+id/other" />
    </RadioGroup>

</RelativeLayout>
